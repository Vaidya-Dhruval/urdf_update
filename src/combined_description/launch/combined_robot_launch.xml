<launch>
    <!-- Define the package share directory -->
    <arg name="robot_description_file" default="urdf/gp7_description.urdf" doc="URDF file to load" />
    <arg name="rviz_config" default="config/view.rviz" doc="RViz configuration file" />

    <!-- Set the robot_description parameter for robot_state_publisher -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" executable="robot_state_publisher" output="screen">
        <param name="robot_description" type="string">
            <param name="robot_description" value="$(find combined_description)/$(arg robot_description_file)" />
        </param>
    </node>

    <!-- Launch the joint_state_publisher_gui node -->
    <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" executable="joint_state_publisher_gui" output="screen">
    </node>

    <!-- Launch RViz -->
    <node name="rviz" pkg="rviz2" executable="rviz2" output="screen">
        <param name="config" type="string" value="$(find combined_description)/$(arg rviz_config)" />
    </node>
</launch>
